---
import Project from '../components/Project.astro';
---

<div id="projects">
  <div class="header">
    <div class="header-title-container">
      <span class="graphic-block-before"></span>
      <h2 class="header-title">Projects</h2>
      <span class="graphic-block-after"></span>
    </div>
    <p class="header-description">Collection of professional and hobby projects. Understandably can not provide links or share code about
      professional projects and images have been modified when necessary.
    </p>
  </div>
  <div class="project-list">
    <Project 
      title='Project 1'
      description='Lorem ipsum'
      image='https://placehold.co/600x600'
      alt='Lorem ipsum'
      link='google.com'>
    </Project>
      <Project 
      title='Project 2'
      description='Lorem ipsum'
      image='https://placehold.co/600x600'
      alt='Lorem ipsum'>
    </Project>
  </div>
</div>

<style>
  #projects {
    margin-top: 10rem;
    margin-bottom: 10rem;
    max-width: 80rem;
    height: 100%;
  }
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;

    .header-title-container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      margin-bottom: 1rem;

      .graphic-block-before, .graphic-block-after {
        position: relative;
        background-color: var(--color-primary-1);
        width: 100%;
        height: 0.5rem;
        clip-path: var(--cut-corners);
      }

      .graphic-block-before, .graphic-block-after {
        &:before, &:after {
          content: "";
          position: absolute;
          background-color: var(--color-background);
        }
      }

      .graphic-block-before {
        &:before {
          top: 0;
          right: 2rem;
          width: 0.5rem;
          height: 100%;
        }

        &:after {
          top: 0;
          right: 5rem;
          width: 50%;
          height: 25%;
        }
      }

      .graphic-block-after {
        &:before {
          top: 0;
          left: 2rem;
          width: 2rem;
          height: 50%;
        }

        &:after {
          bottom: 0;
          left: 5rem;
          width: 35%;
          height: 25%;
        }
      }

      .header-title {
        margin: 0 1rem;
      }
    }
  }

  


</style>