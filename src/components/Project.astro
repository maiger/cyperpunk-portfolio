---
import { Image } from 'astro:assets';

interface Props {
	title: string;
	description: string;
	image: string;
	alt: string;
  link?: string;
  linkText?: string;
}

const {title, description, image, alt,  link, linkText} = Astro.props;
---

<div class="project">
  <img class="image" src={image} alt={alt}>
  <div class="body">
    <h3 class="title">{title}</h3>
    <div class="description">{description}</div>
    <!-- Only render link if link given -->
    {(link) &&
      <a href=`https://www.${link}` class="link">{linkText}</a>
    }
  </div>
</div>

<style>
  .project {
    position: relative;
    display: flex;
    padding: 1rem;
    margin: 3rem 1rem 1rem 1rem;

    &:before {
      content: "";
      position: absolute;
      inset: -2px;
      background: var(--color-primary-1);
      clip-path: var(--cut-corners-border);
    }

    .image {
      width: 30%;
      background-color: var(--color-accent-primary);
      clip-path: var(--cut-corners);
      object-fit: cover;
    }

    .body {
      position: relative;
      display: flex;
      flex-direction: column;
      width: 70%;
      margin-left: 2rem;

      &:before {
        content: "";
        position: absolute;
        right: 0;
        background-color: var(--color-primary-1);
        height: 100%;
        width: 2rem;
        clip-path: var(--cut-corners);
      }
    }

    .title {
      margin-bottom: 1rem;
      margin-right: 3rem;
    }
    .description {
      margin-right: 3rem;
      margin-bottom: 1rem;
    }

    .link {
      padding: 1rem;
      width: 15rem;
      margin-top: auto;
      font-size: var(--text-heading-size-3);
      font-weight: var(--text-weight-bold);
      background-color: var(--color-primary-1);
      color: var(--color-black);
      clip-path: var(--cut-corners);
      cursor: pointer;
      transition: all 0.2s;

      &:hover {
        background-color: var(--color-accent-primary);
        color: var(--color-primary-1);
      }
    }
  }

  @media only screen and (width < 600px) {
    .project {
      flex-direction: column;
      margin-bottom: 10rem;

      .image {
        width: 100%;
        height: 15rem;
        margin-bottom: 2rem;
      }

      .body {
        width: 100%;
        margin-left: 0;
      }
    }
  }
</style>